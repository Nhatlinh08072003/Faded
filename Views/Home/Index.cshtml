
@{
    ViewData["Title"] = "Home Page";
}

<head>

</head>

<div class="relative w-full">
    <img src="https://www.electricland-tokyo.com/cdn/shop/files/2021-03-03-17-46-18.jpg?v=1617811192" alt=""
        class="object-cover h-screen w-full transition-opacity duration-1000" id="image1">
    <img src="https://www.electricland-tokyo.com/cdn/shop/files/2021-03-03_16_38_40.jpg?v=1617583520" alt=""
        class="hidden object-cover h-screen w-full transition-opacity duration-1000" id="image2">
    <img src="https://www.electricland-tokyo.com/cdn/shop/files/2021-03-03-17-46-16.jpg?v=1617811228" alt=""
        class="hidden object-cover h-screen w-full transition-opacity duration-1000" id="image3">

    <div class="absolute inset-0 flex items-center justify-center">
        <h1 class="text-white text-5xl md:text-6xl lg:text-7xl font-bold p-4 rounded transition-opacity duration-1000 opacity-100 shadow-lg"
            id="title1" style="font-family: 'jsMath-cmbx10';">
            Vintage Tee Shop
        </h1>
        <h1 class="text-white text-5xl md:text-6xl lg:text-7xl font-bold p-4 rounded transition-opacity duration-1000 opacity-0 hidden shadow-lg"
            id="title2" style="font-family: 'jsMath-cmbx10';">
            Reword
        </h1>
    </div>

    <!-- Previous and Next buttons -->
    <div class="absolute top-1/2 left-0 transform -translate-y-1/2 ml-4">
        <button id="prevBtn" class="bg-gray-800 text-white p-2 rounded-full focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
        </button>
    </div>
    <div class="absolute top-1/2 right-0 transform -translate-y-1/2 mr-4">
        <button id="nextBtn" class="bg-gray-800 text-white p-2 rounded-full focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </button>
    </div>
</div>

<script>
    let currentIndex = 0;
    const images = [document.getElementById('image1'), document.getElementById('image2'), document.getElementById('image3')];
    const titles = [document.getElementById('title1'), document.getElementById('title2')];
    let intervalId;

    function showImage(index) {
        images[currentIndex].classList.add('hidden');
        titles[currentIndex % titles.length].classList.add('opacity-0');
        titles[currentIndex % titles.length].classList.add('hidden');

        currentIndex = index;

        images[currentIndex].classList.remove('hidden');
        titles[currentIndex % titles.length].classList.remove('opacity-0');
        titles[currentIndex % titles.length].classList.remove('hidden');
    }

    function showNextImage() {
        const nextIndex = (currentIndex + 1) % images.length;
        showImage(nextIndex);
    }

    function showPrevImage() {
        const prevIndex = (currentIndex - 1 + images.length) % images.length;
        showImage(prevIndex);
    }

    function startSlideshow() {
        intervalId = setInterval(showNextImage, 3000); // Change every 3 seconds
    }

    function stopSlideshow() {
        clearInterval(intervalId);
    }

    document.getElementById('nextBtn').addEventListener('click', () => {
        stopSlideshow();
        showNextImage();
        startSlideshow();
    });

    document.getElementById('prevBtn').addEventListener('click', () => {
        stopSlideshow();
        showPrevImage();
        startSlideshow();
    });

    startSlideshow();

    // Header menu toggle functionality
    const menuToggle1 = document.getElementById('menu-toggle-1');
    const mobileMenu1 = document.getElementById('mobile-menu-1');

    menuToggle1.addEventListener('click', () => {
        mobileMenu1.classList.toggle('hidden');
    });

</script>
