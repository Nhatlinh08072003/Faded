@{
    ViewData["Title"] = "Home Page";
}

<head>
    <style>
        header {
            display: none;
        }
    </style>
</head>
<div class="absolute top-0 left-0 w-full bg-opacity-60 bg-black z-10 ">
    <div class="flex justify-center">
        <div class="w-[10%] mx-auto p-10 flex justify-center">
            <span class="text-4xl font-bold text-white" style="font-family: 'jsMath-cmbx10';">Faded</span>
        </div>
        <div class="flex w-full mx-auto gap-20 p-10 justify-center">
            <div class="text-2xl text-white" style="font-family: 'jsMath-cmbx10';">VintageTeeShop</div>
            <div class="text-2xl text-white" style="font-family: 'jsMath-cmbx10';">Rework</div>
            <div class="text-2xl text-white" style="font-family: 'jsMath-cmbx10';">Information</div>
            <div class="text-2xl text-white" style="font-family: 'jsMath-cmbx10';">Contact</div>
            <div class="text-2xl text-white" style="font-family: 'jsMath-cmbx10';">Cart</div>
        </div>
    </div>
</div>
<div class="relative">
    <img src="https://www.electricland-tokyo.com/cdn/shop/files/2021-03-03_16_38_40.jpg?v=1617583520" alt=""
        class="object-cover h-screen w-full transition-opacity duration-1000" id="image1">
    <img src="https://www.electricland-tokyo.com/cdn/shop/files/2021-03-03-17-46-18.jpg?v=1617811192" alt=""
        class="hidden object-cover h-screen w-full transition-opacity duration-1000" id="image2">
    <img src="https://www.electricland-tokyo.com/cdn/shop/files/2021-03-03-17-46-16.jpg?v=1617811228" alt=""
        class="hidden object-cover h-screen w-full transition-opacity duration-1000" id="image3">
</div>
<div class="absolute inset-0 flex items-center justify-center">
    <h1 class="text-white text-5xl font-bold p-4 rounded">Vintage Tee Shop</h1>
</div>

<script>
    let currentIndex = 0;
    const images = document.querySelectorAll('img');

    function showNextImage() {
        // Ẩn hình ảnh hiện tại
        images[currentIndex].classList.add('hidden');

        // Tính chỉ số hình ảnh tiếp theo
        currentIndex = (currentIndex + 1) % images.length;

        // Hiện hình ảnh tiếp theo
        images[currentIndex].classList.remove('hidden');

        // Thêm lớp visible để chuyển từ từ
        images[currentIndex].classList.add('visible');

        // Chờ một chút rồi thực hiện fade in
        setTimeout(() => {
            images[currentIndex].classList.remove('hidden');
        }, 50); // Thời gian chờ nhỏ để hiệu ứng mượt mà hơn
    }

    // Khởi tạo hình ảnh đầu tiên
    images[currentIndex].classList.add('visible');

    // Chuyển đổi hình ảnh mỗi 5 giây
    setInterval(showNextImage, 15000);


</script>
