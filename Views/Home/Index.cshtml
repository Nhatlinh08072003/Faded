@{
    ViewData["Title"] = "Home Page";
}

<head>
    <style>
        header {
            display: none;
        }
    </style>
</head>
<div class="absolute top-0 left-0 w-full bg-opacity-60 bg-black z-10">
    <div class="flex justify-between items-center px-4 py-4">
        <div class="flex justify-center w-[10%]">
            <a href="#">
                <span class="text-4xl font-bold text-white sm:p-20" style="font-family: 'jsMath-cmbx10';">Faded</span>
            </a>
        </div>
        <div class="flex lg:hidden">
            <button id="menu-toggle-1" class="text-white focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7">
                    </path>
                </svg>
            </button>
        </div>
        <nav class="hidden lg:flex w-full mx-auto gap-10 p-4 justify-center">
            <a href="#" class="text-2xl text-white" style="font-family: 'jsMath-cmbx10';">VintageTeeShop</a>
            <a href="#" class="text-2xl text-white" style="font-family: 'jsMath-cmbx10';">Rework</a>
            <a href="/information" class="text-2xl text-white" style="font-family: 'jsMath-cmbx10';">Information</a>
            <a href="#" class="text-2xl text-white" style="font-family: 'jsMath-cmbx10';">Contact</a>
            <a href="#" class="text-2xl text-white" style="font-family: 'jsMath-cmbx10';">Cart</a>
        </nav>
    </div>
    <div id="mobile-menu-1" class="lg:hidden hidden bg-black">
        <div class="flex flex-col items-center py-4">
            <a href="#" class="text-xl text-white py-2" style="font-family: 'jsMath-cmbx10';">VintageTeeShop</a>
            <a href="#" class="text-xl text-white py-2" style="font-family: 'jsMath-cmbx10';">Rework</a>
            <a href="/information" class="text-xl text-white py-2" style="font-family: 'jsMath-cmbx10';">Information</a>
            <a href="#" class="text-xl text-white py-2" style="font-family: 'jsMath-cmbx10';">Contact</a>
            <a href="#" class="text-xl text-white py-2" style="font-family: 'jsMath-cmbx10';">Cart</a>
        </div>
    </div>
</div>

<div class="relative w-full">
    <img src="https://www.electricland-tokyo.com/cdn/shop/files/2021-03-03-17-46-18.jpg?v=1617811192" alt=""
        class="object-cover h-screen w-full transition-opacity duration-1000" id="image1">
    <img src="https://www.electricland-tokyo.com/cdn/shop/files/2021-03-03_16_38_40.jpg?v=1617583520" alt=""
        class="hidden object-cover h-screen w-full transition-opacity duration-1000" id="image2">
    <img src="https://www.electricland-tokyo.com/cdn/shop/files/2021-03-03-17-46-16.jpg?v=1617811228" alt=""
        class="hidden object-cover h-screen w-full transition-opacity duration-1000" id="image3">

    <div class="absolute inset-0 flex items-center justify-center">
        <h1 class="text-white text-5xl md:text-6xl lg:text-7xl font-bold p-4 rounded transition-opacity duration-1000 opacity-100 shadow-lg"
            id="title1" style="font-family: 'jsMath-cmbx10';">
            Vintage Tee Shop
        </h1>
        <h1 class="text-white text-5xl md:text-6xl lg:text-7xl font-bold p-4 rounded transition-opacity duration-1000 opacity-0 hidden shadow-lg"
            id="title2" style="font-family: 'jsMath-cmbx10';">
            Reword
        </h1>
    </div>
</div>


<script>
    let currentIndex = 0;
    const images = [document.getElementById('image1'), document.getElementById('image2'), document.getElementById('image3')];
    const titles = [document.getElementById('title1'), document.getElementById('title2')];

    function showNextImage() {
        images[currentIndex].classList.add('hidden');
        titles[currentIndex].classList.add('opacity-0');

        currentIndex = (currentIndex + 1) % images.length;

        images[currentIndex].classList.remove('hidden');
        titles[currentIndex].classList.remove('opacity-0');

        setTimeout(showNextImage, 3000); // Change every 3 seconds
    }

    setTimeout(showNextImage, 1000);

    // Header menu toggle functionality
    const menuToggle1 = document.getElementById('menu-toggle-1');
    const mobileMenu1 = document.getElementById('mobile-menu-1');

    menuToggle1.addEventListener('click', () => {
        mobileMenu1.classList.toggle('hidden');
    });

</script>
